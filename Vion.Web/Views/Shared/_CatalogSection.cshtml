@model IEnumerable<Vion.Web.Models.Dtos.ProdutoDto>

<div class="row g-4">
    @foreach (var produto in Model)
    {
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">

                @if (!string.IsNullOrEmpty(produto.ImagemUrl))
                {
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@produto.Id" class="d-block overflow-hidden rounded-top">
                        <img src="@produto.ImagemUrl"
                             class="card-img-top product-img-zoom"
                             alt="@produto.Nome"
                             style="object-fit: cover; height: 320px;" />
                    </a>
                }

                <div class="card-body d-flex flex-column">

                    <h5 class="card-title mb-2">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@produto.Id" class="text-decoration-none text-dark">
                            @produto.Nome
                        </a>
                    </h5>

                    <div class="mb-3">
                        <span class="text-muted small">
                            Tamanho: <strong>@produto.Tamanho</strong>
                        </span>
                    </div>

                <p class="fs-4 fw-bold mb-3 text-dark">
                    R$ @produto.Preco.ToString("N2")
                </p>

                    <div class="d-flex gap-2 mt-auto">
                        <a asp-controller="Carrinho" 
                           asp-action="Adicionar" 
                           asp-route-id="@produto.Id"
                           class="btn btn-success flex-grow-1">
                            Adicionar ao Carrinho
                        </a>
                        
                        <a asp-controller="Favoritos" 
                           asp-action="Toggle" 
                           asp-route-produtoId="@produto.Id"
                           asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                           class="btn btn-outline-danger" 
                           title="Favoritar">
                            <i class="bi bi-heart default-icon"></i>
                            <i class="bi bi-heart-fill hover-icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
