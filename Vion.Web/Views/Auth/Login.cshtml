@model Vion.Web.Models.LoginVm

@{
    ViewData["Title"] = "Entrar";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="w-100" style="max-width: 480px;">
        
        <div class="text-center mb-5">
            <!-- Logo ou Ícone -->
            <h2 class="fw-bold mb-3 text-dark">Insira seu e-mail para entrar.</h2>
            <p class="text-muted">Bem-vindo de volta à Vion.</p>
        </div>

        @if (TempData["PasswordResetSuccess"] as bool? == true)
        {
            <div class="alert alert-success text-center mb-4 border-0 rounded-3 shadow-sm bg-success text-white fw-bold">
                <i class="fa-solid fa-check-circle me-2"></i> Senha alterada com sucesso!
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control rounded-3" placeholder=" " />
                <label asp-for="Email" class="text-muted">E-mail</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Senha" class="form-control rounded-3" placeholder="Senha" type="password" />
                <label asp-for="Senha" class="text-muted">Senha</label>
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>

            <div class="mb-4 text-muted small text-center">
                Ao continuar, você concorda com a <a href="#" class="text-decoration-underline text-dark">Política de Privacidade</a> e os <a href="#" class="text-decoration-underline text-dark">Termos de Uso</a> da Vion.
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark rounded-pill py-3 fw-bold fs-5">Continuar</button>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <a asp-action="ForgotPassword" class="text-muted small text-decoration-none">
                    Esqueceu sua senha?
                </a>
            </div>

            <div class="text-center mt-4">
                <span class="text-muted">Não tem uma conta?</span> 
                <a asp-action="Register" asp-route-returnUrl="@Model?.ReturnUrl" class="text-dark fw-bold text-decoration-none">Junte-se a nós</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
