@model Vion.Web.Models.ResetPasswordVm

@{
    ViewData["Title"] = "Redefinir senha";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="w-100" style="max-width: 480px;">

        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3 text-dark">Crie uma nova senha</h2>
            <p class="text-muted">Escolha uma senha forte para proteger sua conta.</p>
        </div>

        <form method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-start mb-4 border-0 rounded-3 shadow-sm bg-danger text-white">
                    <i class="fa-solid fa-circle-exclamation me-2"></i> <strong>Não foi possível alterar a senha:</strong>
                    <ul class="mb-0 mt-2 ps-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <input type="hidden" asp-for="Token" />

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control rounded-3" placeholder=" " readonly style="background-color: #f8f9fa;" />
                <label asp-for="Email" class="text-muted">E-mail</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NovaSenha" class="form-control rounded-3" placeholder=" " type="password" />
                <label asp-for="NovaSenha" class="text-muted">Nova senha</label>
                <span asp-validation-for="NovaSenha" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="ConfirmarSenha" class="form-control rounded-3" placeholder=" " type="password" />
                <label asp-for="ConfirmarSenha" class="text-muted">Confirmar nova senha</label>
                <span asp-validation-for="ConfirmarSenha" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark rounded-pill py-3 fw-bold fs-5">
                    Salvar nova senha
                </button>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Login" class="text-muted text-decoration-none">Voltar para o login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

