@model Vion.Web.Models.ForgotPasswordVm

@{
    ViewData["Title"] = "Esqueceu sua senha";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="w-100" style="max-width: 480px;">

        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3 text-dark">Esqueceu sua senha?</h2>
            <p class="text-muted">Informe o e-mail cadastrado para receber um link seguro de redefinição.</p>
        </div>

        @if (ViewData["ForgotPasswordSent"] as bool? == true)
        {
            <div class="alert alert-success text-start">
                Se encontrarmos uma conta com esse e-mail, enviaremos instruções para redefinir sua senha.
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="form-floating mb-4">
                <input asp-for="Email" class="form-control rounded-3" placeholder=" " />
                <label asp-for="Email" class="text-muted">E-mail</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-dark rounded-pill py-3 fw-bold fs-5">
                    Enviar link de redefinição
                </button>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Login" class="text-muted text-decoration-none">Voltar para o login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

