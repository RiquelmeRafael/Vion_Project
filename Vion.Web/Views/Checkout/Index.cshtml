@model Vion.Web.Models.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Finalizar Compra";
}

<style>
    /* Steps Styling */
    .checkout-steps {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 3rem;
        gap: 1rem;
    }
    .checkout-step {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #adb5bd;
        font-weight: 500;
    }
    .checkout-step.active {
        color: #000;
        font-weight: 700;
    }
    .step-number {
        width: 32px;
        height: 32px;
        background-color: #f8f9fa;
        border: 2px solid #e9ecef;
        color: #adb5bd;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        font-weight: 700;
        transition: all 0.3s ease;
    }
    .checkout-step.active .step-number {
        background-color: #000;
        border-color: #000;
        color: #fff;
    }
    .checkout-divider {
        width: 40px;
        height: 2px;
        background-color: #e9ecef;
    }

    /* Cards & Form Styling */
    .checkout-card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        border: 1px solid #f1f3f5;
        box-shadow: 0 2px 15px rgba(0,0,0,0.03);
        margin-bottom: 1.5rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .checkout-card:hover {
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }
    .card-title {
        font-weight: 700;
        color: #212529;
        font-size: 1.1rem;
        border-bottom: 1px solid #f1f3f5;
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
    }
    .form-label {
        font-weight: 500;
        color: #495057;
        font-size: 0.9rem;
        margin-bottom: 0.4rem;
    }
    .form-control {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        font-size: 0.95rem;
    }
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
    }
    
    /* Payment Options */
    .payment-option {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 0.75rem;
        cursor: pointer;
        transition: all 0.2s;
        background: #f8f9fa;
    }
    .payment-option:hover {
        background: #fff;
        border-color: #adb5bd;
    }
    .payment-option.selected {
        background: #f0f7ff;
        border-color: #0d6efd;
        box-shadow: 0 0 0 1px #0d6efd;
    }
    .form-check-input:checked ~ .form-check-label .payment-option {
        background: #f0f7ff;
        border-color: #0d6efd;
    }
    
    /* Summary Section */
    .summary-section {
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        border: 1px solid #f1f3f5;
        box-shadow: 0 5px 25px rgba(0,0,0,0.04);
        position: sticky;
        top: 2rem;
    }
    .summary-title {
        font-weight: 700;
        margin-bottom: 1.5rem;
        font-size: 1.25rem;
    }
    .summary-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        color: #6c757d;
        font-size: 0.95rem;
    }
    .summary-row.total {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 2px dashed #e9ecef;
        font-weight: 800;
        color: #212529;
        font-size: 1.2rem;
    }
    .discount-row {
        color: #198754;
        font-weight: 500;
    }
    .btn-pay {
        background-color: #198754;
        color: white;
        padding: 16px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s;
        border: none;
        box-shadow: 0 4px 12px rgba(25, 135, 84, 0.2);
    }
    .btn-pay:hover {
        background-color: #157347;
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(25, 135, 84, 0.3);
    }
    
    /* Product Mini Item */
    .product-mini-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f8f9fa;
    }
    .product-mini-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .product-mini-qty {
        background: #212529;
        color: white;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: bold;
    }
</style>

<div class="container py-5">
    <!-- Checkout Steps -->
    <div class="checkout-steps">
        <div class="checkout-step">
            <span class="step-number"><i class="fas fa-check"></i></span>
            <span>Carrinho</span>
        </div>
        <div class="checkout-divider"></div>
        <div class="checkout-step active">
            <span class="step-number">2</span>
            <span>Identificação</span>
        </div>
        <div class="checkout-divider"></div>
        <div class="checkout-step active">
            <span class="step-number">3</span>
            <span>Pagamento</span>
        </div>
    </div>

    <div class="row g-5">
        <!-- Coluna da Esquerda: Formulário -->
        <div class="col-lg-7">
            
            <form asp-action="Processar" method="post">
                <!-- Dados Pessoais -->
                <div class="checkout-card">
                    <h5 class="card-title">
                        <i class="far fa-user me-2 text-primary"></i>
                        Dados Pessoais e Entrega
                    </h5>
                    
                    <div class="mb-4">
                        <label asp-for="NomeCompleto" class="form-label">Nome Completo</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="far fa-user text-muted"></i></span>
                            <input asp-for="NomeCompleto" class="form-control border-start-0 ps-0" placeholder="Como prefere ser chamado?" />
                        </div>
                        <span asp-validation-for="NomeCompleto" class="text-danger small"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="far fa-envelope text-muted"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 ps-0" placeholder="seu@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cpf" class="form-label">CPF</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="far fa-id-card text-muted"></i></span>
                                <input asp-for="Cpf" class="form-control border-start-0 ps-0" placeholder="000.000.000-00" id="cpfInput" maxlength="14" />
                            </div>
                            <span asp-validation-for="Cpf" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-4">
                            <label asp-for="Cep" class="form-label">CEP</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-map-marker-alt text-muted"></i></span>
                                <input asp-for="Cep" class="form-control border-start-0 ps-0" placeholder="00000-000" id="cepInput" />
                            </div>
                            <span asp-validation-for="Cep" class="text-danger small"></span>
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Endereco" class="form-label">Endereço Completo</label>
                            <input asp-for="Endereco" class="form-control" placeholder="Rua, Número, Bairro" />
                            <span asp-validation-for="Endereco" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-8">
                            <label asp-for="Cidade" class="form-label">Cidade</label>
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Estado" class="form-label">Estado (UF)</label>
                            <input asp-for="Estado" class="form-control" placeholder="SP" maxlength="2" />
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Pagamento -->
                <div class="checkout-card">
                    <h5 class="card-title">
                        <i class="far fa-credit-card me-2 text-primary"></i>
                        Forma de Pagamento
                    </h5>
                    
                    <div class="payment-option p-0 border-0 bg-transparent">
                        <div class="form-check p-0 m-0">
                            <input class="form-check-input d-none" type="radio" asp-for="FormaPagamento" value="Pix" id="pagamentoPix" checked>
                            <label class="form-check-label d-block p-3 border rounded mb-3 payment-label" for="pagamentoPix" style="cursor: pointer; transition: all 0.2s;">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 text-center" style="width: 40px;">
                                        <i class="fas fa-qrcode text-success fs-2"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold text-dark">Pix (Instantâneo)</div>
                                        <small class="text-muted">Aprovação imediata, mais rápido e seguro.</small>
                                    </div>
                                    <div class="check-indicator text-primary">
                                        <i class="fas fa-check-circle fs-4"></i>
                                    </div>
                                </div>
                            </label>
                        </div>
                        
                        <div class="form-check p-0 m-0">
                            <input class="form-check-input d-none" type="radio" asp-for="FormaPagamento" value="CartaoCredito" id="pagamentoCartao">
                            <label class="form-check-label d-block p-3 border rounded payment-label" for="pagamentoCartao" style="cursor: pointer; transition: all 0.2s;">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 text-center" style="width: 40px;">
                                        <i class="fas fa-credit-card text-primary fs-2"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold text-dark">Cartão de Crédito</div>
                                        <small class="text-muted">Parcele suas compras em até 12x.</small>
                                    </div>
                                    <div class="check-indicator text-muted opacity-25">
                                        <i class="fas fa-circle fs-4"></i>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="FormaPagamento" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-pay w-100 mt-2">
                    <i class="fas fa-lock me-2"></i> Pagar @Model.Carrinho.TotalComFrete.ToString("C")
                </button>
            </form>
        </div>

        <!-- Coluna da Direita: Resumo do Pedido -->
        <div class="col-lg-5">
            <div class="summary-section">
                <h4 class="summary-title">Resumo do Pedido</h4>
                
                <div class="mb-4">
                    @foreach (var item in Model.Carrinho.Itens)
                    {
                        var tamanhosPorProduto = ViewBag.TamanhosPorProduto as Dictionary<int, List<SelectListItem>>;
                        var opcoes = tamanhosPorProduto != null && tamanhosPorProduto.ContainsKey(item.ProdutoId)
                            ? tamanhosPorProduto[item.ProdutoId]
                            : null;

                        <div class="product-mini-item">
                            <div class="product-mini-info">
                                <div class="product-mini-qty">@item.Quantidade</div>
                                <div>
                                    <h6 class="my-0 text-dark fw-bold" style="font-size: 0.95rem;">@item.Nome</h6>
                                    @if (!string.IsNullOrEmpty(item.Tamanho))
                                    {
                                        <small class="text-muted d-block">Tamanho: <strong>@item.Tamanho</strong></small>
                                    }
                                </div>
                            </div>
                            <div class="fw-bold text-dark">@item.Total.ToString("C")</div>
                        </div>
                        
                        @if (opcoes != null && opcoes.Count > 1)
                        {
                             <div class="mb-3 ps-5 ms-2">
                                <form asp-controller="Carrinho"
                                      asp-action="AlterarTamanho"
                                      method="post"
                                      class="d-flex gap-2 align-items-center">
                                    <input type="hidden" name="produtoIdAtual" value="@item.ProdutoId" />
                                    <select name="novoProdutoId" class="form-select form-select-sm" style="max-width: 140px; font-size: 0.8rem;">
                                        @foreach (var opcao in opcoes)
                                        {
                                            <option value="@opcao.Value" selected="@(opcao.Selected)">
                                                @opcao.Text
                                            </option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-light btn-sm border rounded-pill" style="font-size: 0.75rem;">
                                        Alterar
                                    </button>
                                </form>
                             </div>
                        }
                    }
                </div>

                <div class="summary-row">
                    <span>Subtotal</span>
                    <span>@Model.Carrinho.Total.ToString("C")</span>
                </div>

                <div class="summary-row">
                    <span>Frete</span>
                    @if (Model.Carrinho.TotalFrete == 0)
                    {
                        <span class="text-success">Grátis</span>
                    }
                    else
                    {
                        <span>@Model.Carrinho.TotalFrete.ToString("C")</span>
                    }
                </div>

                @if (Model.Carrinho.ValorDesconto > 0)
                {
                    <div class="summary-row discount-row">
                        <span>Desconto (@Model.Carrinho.CupomAplicado)</span>
                        <span>- @Model.Carrinho.ValorDesconto.ToString("C")</span>
                    </div>
                }

                <div class="summary-row total">
                    <span>Total</span>
                    <span>@Model.Carrinho.TotalComFrete.ToString("C")</span>
                </div>

                <div class="alert alert-success border-0 bg-opacity-10 mt-4 d-flex align-items-center" style="background-color: rgba(25, 135, 84, 0.1); color: #0f5132;">
                    <i class="fas fa-shield-alt me-3 fs-4"></i> 
                    <div class="small lh-sm">
                        <strong>Ambiente 100% Seguro</strong><br>
                        Seus dados estão protegidos por criptografia de ponta a ponta.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function(){
            // Style Radio Buttons
            $('input[name="FormaPagamento"]').change(function(){
                $('.payment-label').removeClass('border-primary bg-light').addClass('border');
                $('.check-indicator').removeClass('text-primary').addClass('text-muted opacity-25').find('i').removeClass('fa-check-circle').addClass('fa-circle');
                
                var selectedId = $(this).attr('id');
                var label = $('label[for="' + selectedId + '"]');
                
                label.removeClass('border').addClass('border-primary bg-light');
                label.find('.check-indicator').removeClass('text-muted opacity-25').addClass('text-primary').find('i').removeClass('fa-circle').addClass('fa-check-circle');
            });

            // Trigger change on load to set initial state
            $('input[name="FormaPagamento"]:checked').trigger('change');

            // Máscaras
            $('#cpfInput').mask('000.000.000-00');
            $('#cepInput').mask('00000-000');

            // ViaCEP
            $('#cepInput').on('blur', function() {
                var cep = $(this).val().replace(/\D/g, '');
                
                if (cep != "") {
                    var validacep = /^[0-9]{8}$/;

                    if(validacep.test(cep)) {
                        // Preenche os campos com "..." enquanto consulta webservice.
                        $("#Endereco").val("Buscando...");
                        $("#Cidade").val("...");
                        $("#Estado").val("...");

                        // Consulta o webservice viacep.com.br/
                        $.getJSON("https://viacep.com.br/ws/"+ cep +"/json/?callback=?", function(dados) {
                            if (!("erro" in dados)) {
                                // Atualiza os campos com os valores da consulta.
                                // Formato: Logradouro, Bairro (Deixa espaço para o número)
                                $("#Endereco").val(dados.logradouro + ", " + dados.bairro + ", ");
                                $("#Cidade").val(dados.localidade);
                                $("#Estado").val(dados.uf);
                                
                                // Foca no campo de endereço para o usuário completar o número
                                $("#Endereco").focus();
                            } else {
                                // CEP pesquisado não foi encontrado.
                                limpar_formulario_cep();
                                alert("CEP não encontrado.");
                            }
                        });
                    } else {
                        // CEP é inválido.
                        limpar_formulario_cep();
                        alert("Formato de CEP inválido.");
                    }
                } else {
                    // CEP sem valor, limpa formulário.
                    limpar_formulario_cep();
                }
            });

            function limpar_formulario_cep() {
                $("#Endereco").val("");
                $("#Cidade").val("");
                $("#Estado").val("");
            }
        });
    </script>
}
