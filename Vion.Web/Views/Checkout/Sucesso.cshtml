@model int

@{
    ViewData["Title"] = "Pedido Realizado";
}

<style>
    .success-page-wrapper {
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
    }
    .success-card {
        max-width: 640px;
        width: 100%;
        border-radius: 24px;
        padding: 3rem 3.5rem;
        background: linear-gradient(145deg, #151515 0%, #1f1f1f 40%, #141414 100%);
        border: 1px solid rgba(255, 215, 128, 0.25);
        box-shadow: 0 24px 60px rgba(0, 0, 0, 0.8);
        position: relative;
        overflow: hidden;
        text-align: center;
        color: #f8f9fa;
    }
    .success-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top right, rgba(255, 215, 128, 0.18), transparent 55%);
        opacity: 0.9;
        pointer-events: none;
    }
    .success-inner {
        position: relative;
        z-index: 1;
    }
    .success-icon-wrapper {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 88px;
        height: 88px;
        border-radius: 50%;
        background: radial-gradient(circle at 30% 0, #fff8e1, #f0b544, #b37c1b);
        box-shadow: 0 0 24px rgba(240, 181, 68, 0.8);
        margin-bottom: 1.75rem;
        position: relative;
    }
    .success-icon-wrapper img {
        width: 82px;
        height: 82px;
        border-radius: 50%;
        object-fit: cover;
    }
    .success-title {
        font-size: 2.5rem;
        font-weight: 800;
        letter-spacing: 0.04em;
        color: #f8d27a;
        margin-bottom: 0.5rem;
    }
    .success-title span {
        background: linear-gradient(120deg, #ffe29f, #f9c46b, #f4b139);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .success-subtitle {
        font-size: 1rem;
        color: #e9ecef;
        margin-bottom: 1.5rem;
    }
    .success-text {
        font-size: 0.95rem;
        color: #cfd3da;
        max-width: 420px;
        margin: 0 auto 2.5rem auto;
    }
    .success-text strong {
        color: #ffd98a;
        font-weight: 600;
    }
    .success-order-id {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        background: rgba(255, 215, 128, 0.08);
        border: 1px solid rgba(255, 215, 128, 0.35);
        color: #ffd98a;
        font-size: 0.85rem;
        margin-bottom: 1.5rem;
    }
    .success-order-id i {
        font-size: 0.9rem;
    }
    .btn-gold-primary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.9rem 1.5rem;
        border-radius: 999px;
        width: 100%;
        border: none;
        font-weight: 600;
        font-size: 0.95rem;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        color: #1c1205;
        background-image: linear-gradient(120deg, #ffe29f, #f9c46b, #f4b139);
        box-shadow: 0 12px 28px rgba(244, 177, 57, 0.45);
        transition: transform 0.15s ease, box-shadow 0.15s ease, filter 0.15s ease;
        text-decoration: none;
    }
    .btn-gold-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 18px 40px rgba(244, 177, 57, 0.6);
        filter: brightness(1.02);
        color: #1c1205;
    }
    .btn-gold-secondary {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.85rem 1.5rem;
        border-radius: 999px;
        width: 100%;
        border: 1px solid rgba(255, 215, 128, 0.65);
        background: transparent;
        color: #f8d27a;
        font-weight: 500;
        font-size: 0.95rem;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        text-decoration: none;
        transition: background 0.15s ease, color 0.15s ease, transform 0.15s ease, box-shadow 0.15s ease;
    }
    .btn-gold-secondary:hover {
        background: rgba(255, 215, 128, 0.12);
        color: #ffe29f;
        transform: translateY(-1px);
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.45);
    }
    .success-buttons {
        max-width: 320px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .success-glow {
        position: absolute;
        left: -40px;
        bottom: -40px;
        width: 160px;
        height: 160px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(244, 177, 57, 0.35), transparent 70%);
        opacity: 0.9;
    }
    @@media (max-width: 768px) {
        .success-card {
            margin: 2.5rem 1.25rem;
            padding: 2.25rem 1.75rem;
        }
        .success-title {
            font-size: 2rem;
        }
        .success-buttons {
            max-width: 100%;
        }
    }
</style>

<div class="success-page-wrapper">
    <div class="success-card">
        <div class="success-glow"></div>
        <div class="success-inner">
            <div class="success-icon-wrapper">
                <img src="~/images/sucessoPedido.png" alt="Pedido confirmado com sucesso">
            </div>

            <div class="success-order-id">
                <i class="fas fa-receipt"></i>
                <span>Pedido #@Model confirmado</span>
            </div>

            <h1 class="success-title">
                <span>Obrigado!</span>
            </h1>
            <div class="success-subtitle">
                Seu pedido foi recebido com sucesso.
            </div>

            <p class="success-text">
                Agora é só aguardar. Você receberá atualizações sobre o status do seu pedido por e-mail assim que houver qualquer movimentação.
            </p>

            <div class="success-buttons">
                <a asp-action="MeusPedidos" class="btn-gold-primary">
                    Ver Meus Pedidos
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn-gold-secondary">
                    Continuar Comprando
                </a>
            </div>
        </div>
    </div>
</div>
