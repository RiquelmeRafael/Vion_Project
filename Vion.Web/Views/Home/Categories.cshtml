@model List<Vion.Web.Models.ViewModels.CategoryCardViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="container my-5">
    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <a href="/Produtos/@item.Id" class="text-decoration-none">
                    <div class="card h-100 bg-white text-dark border-0 shadow-sm text-center p-3 category-card position-relative overflow-hidden">
                        <div class="d-flex align-items-center justify-content-center" style="height: 250px; background-color: #f8f9fa;">
                            <img src="@item.ImagemUrl" class="img-fluid" style="max-height: 220px; object-fit: contain;" alt="@item.Nome">
                        </div>
                        <div class="card-body d-flex flex-column justify-content-end">
                            <h4 class="card-title fw-bold mb-3 text-dark">@item.Nome</h4>
                            <div class="mt-auto border-top border-dark pt-3" style="width: 50%; margin: 0 auto;">
                                <i class="bi bi-arrow-right text-dark fs-4"></i>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .category-card {
        transition: all 0.3s ease;
        border: 1px solid transparent !important;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .category-card:hover {
        transform: translateY(-5px);
        border: 1px solid #dee2e6 !important;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }
    .category-card i {
        transition: margin-left 0.3s;
    }
    .category-card:hover i {
        margin-left: 10px;
        color: #000 !important;
    }
</style>