@model CatalogViewModel

@{
    ViewData["Title"] = "Home";

    var tenisCat = Model?.Categorias.FirstOrDefault(c => c.Nome == "T√™nis");
    var camisetaCat = Model?.Categorias.FirstOrDefault(c => c.Nome == "Camiseta");
    var acessoriosCat = Model?.Categorias.FirstOrDefault(c => c.Nome == "Acess√≥rios");
    var shortCat = Model?.Categorias.FirstOrDefault(c => c.Nome == "Short");
    var hero = ViewBag.HomeHero as Vion.Domain.Entities.HomeHero;
    var heroMainCategory = hero?.MainButtonCategoriaId != null
        ? Model?.Categorias.FirstOrDefault(c => c.Id == hero.MainButtonCategoriaId)
        : tenisCat;
    var heroCardCategory = hero?.CardCategoriaId != null
        ? Model?.Categorias.FirstOrDefault(c => c.Id == hero.CardCategoriaId)
        : tenisCat;
    var destaques = ViewBag.HomeFeaturedItems as List<Vion.Domain.Entities.HomeFeaturedItem>;
}

<style>
    .home-page {
        background: #000;
        color: #f5f5f5;
        min-height: calc(100vh - 140px);
        display: flex;
        flex-direction: column;
    }

    .home-page a {
        text-decoration: none;
    }

    .home-hero {
        display: grid;
        grid-template-columns: minmax(0, 1.3fr) minmax(0, 1fr);
        gap: 3rem;
        padding: 5rem 5vw 3rem;
    }

    .home-hero-left-eyebrow {
        text-transform: uppercase;
        letter-spacing: .2em;
        font-size: .8rem;
        color: #bbbbbb;
        margin-bottom: 1rem;
    }

    .home-hero-title {
        font-size: clamp(2.6rem, 4vw, 3.6rem);
        line-height: 1.04;
        font-weight: 800;
    }

    .home-hero-title span {
        display: inline-block;
        background: linear-gradient(120deg, #ffffff, var(--home-hero-accent, #d3ff6b));
        color: #000;
        padding: 0 .4rem;
    }

    .home-hero-subtitle {
        margin-top: 1.5rem;
        font-size: 1rem;
        max-width: 420px;
        color: #d0d0d0;
    }

    .home-hero-cta {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
    }

    .home-hero-cta-main {
        background: #fff;
        color: #000;
        border-radius: 999px;
        padding: .85rem 2.6rem;
        font-weight: 700;
        font-size: .9rem;
        text-transform: uppercase;
        letter-spacing: .14em;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: .6rem;
    }

    .home-hero-cta-main span {
        font-size: 1.1rem;
    }

    .home-hero-cta-secondary {
        background: transparent;
        border-radius: 999px;
        padding: .85rem 2.2rem;
        font-weight: 600;
        font-size: .9rem;
        text-transform: uppercase;
        letter-spacing: .14em;
        border: 1px solid #444;
        color: #f5f5f5;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
    }

    .home-hero-categories {
        display: flex;
        flex-wrap: wrap;
        gap: .6rem;
        margin-top: 1.5rem;
        font-size: .75rem;
    }

    .home-hero-category-pill {
        border-radius: 999px;
        border: 1px solid #333;
        padding: .55rem 1.2rem;
        text-transform: uppercase;
        letter-spacing: .18em;
        color: #f5f5f5;
        background: #050505;
    }

    .home-hero-meta {
        display: flex;
        gap: 2.5rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .15em;
        color: #b0b0b0;
    }

    .home-hero-right {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .home-hero-card {
        position: relative;
        background: radial-gradient(circle at 0% 0%, #242424, #050505);
        border-radius: 32px;
        padding: 2.5rem 2.2rem;
        max-width: 480px;
        width: 100%;
        overflow: hidden;
        box-shadow: 0 40px 100px rgba(0, 0, 0, .9);
    }

    .home-hero-card-link {
        display: block;
        color: inherit;
    }

    .home-hero-card-tag {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        padding: .4rem .9rem;
        border-radius: 999px;
        background: rgba(255, 255, 255, .06);
        color: #e5e5e5;
        font-size: .7rem;
        text-transform: uppercase;
        letter-spacing: .18em;
    }

    .home-hero-card-title {
        margin-top: 1.6rem;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: .16em;
        color: #f7f7f7;
    }

    .home-hero-card-image-wrapper {
        margin-top: 1.8rem;
        position: relative;
        height: 220px;
    }

    .home-hero-card-image-bg {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 10% 0%, var(--home-hero-accent, #4cffb3) 0, transparent 45%), radial-gradient(circle at 90% 0%, #ffffff 0, transparent 50%), radial-gradient(circle at 50% 100%, #ffed7b 0, transparent 55%);
        opacity: .8;
        filter: blur(6px);
    }

    .home-hero-card-image {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transform: translateY(8px);
    }

    .home-hero-card-image img {
        max-width: 110%;
        height: auto;
        transform: rotate(-16deg);
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, .9));
    }

    .home-hero-card-footer {
        margin-top: 2.2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
        font-size: .8rem;
        color: #d5d5d5;
    }

    .home-hero-price {
        display: flex;
        flex-direction: column;
        gap: .1rem;
    }

    .home-hero-price-current {
        font-size: 1.1rem;
        font-weight: 700;
    }

    .home-hero-price-old {
        font-size: .85rem;
        text-decoration: line-through;
        color: #999;
    }

    .home-hero-size {
        text-transform: uppercase;
        letter-spacing: .16em;
        font-size: .8rem;
    }

    .home-hero-badge {
        padding: .4rem .8rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, .16);
        text-transform: uppercase;
        letter-spacing: .16em;
        font-size: .7rem;
    }

    .home-featured {
        padding: 1.5rem 5vw 3.5rem;
        background: #050505;
    }

    .home-featured-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 1rem;
        margin-bottom: 1.8rem;
    }

    .home-featured-title {
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: .2em;
        color: #d0d0d0;
    }

    .home-featured-link {
        font-size: .8rem;
        text-transform: uppercase;
        letter-spacing: .18em;
        color: #f5f5f5;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
    }

    .home-featured-grid {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 1.5rem;
    }

    .home-featured-card {
        background: #0b0b0b;
        border-radius: 24px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        border: 1px solid rgba(255, 255, 255, .04);
        transition: transform .35s ease, box-shadow .35s ease, border-color .35s ease;
    }

    .home-featured-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 26px 70px rgba(0, 0, 0, .9);
        border-color: rgba(255, 255, 255, .12);
    }

    .home-featured-image {
        position: relative;
        padding-top: 68%;
        background: radial-gradient(circle at 0% 0%, #202020, #050505);
    }

    .home-featured-image img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .home-featured-body {
        padding: 1.4rem 1.4rem 1.2rem;
        display: flex;
        flex-direction: column;
        gap: .4rem;
    }

    .home-featured-tag {
        font-size: .7rem;
        text-transform: uppercase;
        letter-spacing: .18em;
        color: #b0b0b0;
    }

    .home-featured-name {
        font-size: .95rem;
        font-weight: 600;
    }

    .home-featured-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: .6rem;
        font-size: .8rem;
        color: #d0d0d0;
    }

    .home-featured-price {
        font-weight: 600;
    }

    .home-featured-pill {
        padding: .15rem .6rem;
        border-radius: 999px;
        border: 1px solid #333;
        font-size: .7rem;
        text-transform: uppercase;
        letter-spacing: .16em;
    }

    .home-banner {
        padding: 3rem 5vw 4rem;
        background: linear-gradient(135deg, #111, #050505);
        border-top: 1px solid #151515;
        border-bottom: 1px solid #151515;
    }

    .home-banner-inner {
        display: flex;
        justify-content: space-between;
        gap: 2rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .home-banner-title {
        font-size: 1.2rem;
        text-transform: uppercase;
        letter-spacing: .22em;
        margin-bottom: .7rem;
    }

    .home-banner-subtitle {
        font-size: .95rem;
        max-width: 460px;
        color: #d0d0d0;
    }

    .home-banner-badges {
        display: flex;
        flex-wrap: wrap;
        gap: .8rem;
        font-size: .7rem;
        text-transform: uppercase;
        letter-spacing: .16em;
    }

    .home-banner-badge {
        padding: .5rem 1rem;
        border-radius: 999px;
        border: 1px solid #2b2b2b;
        background: #050505;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
    }

    .home-banner-badge-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: var(--home-hero-accent, #4cffb3);
    }

    .home-utilities {
        padding: 2.2rem 5vw 3.2rem;
        background: #000;
    }

    .home-utilities-row {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 1.8rem;
    }

    .home-utility-card {
        border-radius: 24px;
        border: 1px solid #181818;
        background: radial-gradient(circle at 0% 0%, #101010, #050505);
        padding: 1.6rem 1.6rem 1.4rem;
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }

    .home-utility-icon {
        width: 34px;
        height: 34px;
        border-radius: 999px;
        border: 1px solid #2f2f2f;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        margin-bottom: .4rem;
    }

    .home-utility-title {
        font-size: .9rem;
        font-weight: 600;
    }

    .home-utility-text {
        font-size: .82rem;
        color: #c3c3c3;
    }

    @@media (max-width: 992px) {
        .home-hero {
            grid-template-columns: minmax(0, 1fr);
            padding-top: 4rem;
        }

        .home-hero-right {
            order: -1;
        }

        .home-featured-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .home-hero {
            padding: 3.5rem 1.5rem 2.5rem;
        }

        .home-featured {
            padding: 1.5rem 1.5rem 3rem;
        }

        .home-banner {
            padding: 2.4rem 1.5rem 3rem;
        }

        .home-utilities {
            padding: 2rem 1.5rem 3rem;
        }

        .home-featured-grid {
            grid-template-columns: minmax(0, 1fr);
        }

        .home-utilities-row {
            grid-template-columns: minmax(0, 1fr);
        }
    }
</style>

<div class="home-page" style="--home-hero-accent:@(hero?.AccentColorHex ?? "#4cffb3")">
    <section class="home-hero">
        <div>
            <div class="home-hero-left-eyebrow">
                @(string.IsNullOrWhiteSpace(hero?.Eyebrow) ? "Lan√ßamento exclusivo" : hero.Eyebrow)
            </div>
            <h1 class="home-hero-title">
                @(string.IsNullOrWhiteSpace(hero?.TitlePrefix) ? "O pr√≥ximo passo do" : hero.TitlePrefix)
                <span>@(string.IsNullOrWhiteSpace(hero?.TitleHighlight) ? "street sport" : hero.TitleHighlight)</span>
                @(string.IsNullOrWhiteSpace(hero?.TitleSuffix) ? "chegou." : hero.TitleSuffix)
            </h1>
            <p class="home-hero-subtitle">
                @(string.IsNullOrWhiteSpace(hero?.Subtitle)
                    ? "Silhuetas agressivas, amortecimento responsivo e design pensado para quem vive o movimento 24/7. VION √© o novo ritmo da sua cidade."
                    : hero.Subtitle)
            </p>

            <div class="home-hero-cta">
                @if (heroMainCategory != null)
                {
                    <a asp-controller="Home"
                       asp-action="Products"
                       asp-route-categoriaId="@heroMainCategory.Id"
                       class="home-hero-cta-main">
                        @(string.IsNullOrWhiteSpace(hero?.MainButtonText) ? "Comprar agora" : hero.MainButtonText)
                        <span>‚Üí</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="home-hero-cta-main">
                        @(string.IsNullOrWhiteSpace(hero?.MainButtonText) ? "Comprar agora" : hero.MainButtonText)
                        <span>‚Üí</span>
                    </a>
                }
                <a asp-controller="Home" asp-action="Catalog" class="home-hero-cta-secondary">
                    @(string.IsNullOrWhiteSpace(hero?.SecondaryButtonText) ? "Ver cole√ß√µes" : hero.SecondaryButtonText)
                    <span>‚ñ¢</span>
                </a>
            </div>

            @if (tenisCat != null || camisetaCat != null || acessoriosCat != null || shortCat != null)
            {
                <div class="home-hero-categories">
                    @if (tenisCat != null)
                    {
                        <a asp-controller="Home"
                           asp-action="Products"
                           asp-route-categoriaId="@tenisCat.Id"
                           class="home-hero-category-pill">
                            T√™nis
                        </a>
                    }
                    @if (camisetaCat != null)
                    {
                        <a asp-controller="Home"
                           asp-action="Products"
                           asp-route-categoriaId="@camisetaCat.Id"
                           class="home-hero-category-pill">
                            Camisas
                        </a>
                    }
                    @if (acessoriosCat != null)
                    {
                        <a asp-controller="Home"
                           asp-action="Products"
                           asp-route-categoriaId="@acessoriosCat.Id"
                           class="home-hero-category-pill">
                            Acess√≥rios
                        </a>
                    }
                    @if (shortCat != null)
                    {
                        <a asp-controller="Home"
                           asp-action="Products"
                           asp-route-categoriaId="@shortCat.Id"
                           class="home-hero-category-pill">
                            Shorts
                        </a>
                    }
                </div>
            }

            <div class="home-hero-meta">
                <div>Envio para todo o Brasil</div>
                <div>Parcelamento sem juros</div>
                <div>Produtos selecionados a dedo</div>
            </div>
        </div>

        <div class="home-hero-right">
            @if (heroCardCategory != null)
            {
                <a asp-controller="Home"
                   asp-action="Products"
                   asp-route-categoriaId="@heroCardCategory.Id"
                   class="home-hero-card-link">
                    <div class="home-hero-card">
                        <div class="home-hero-card-tag">
                            <span>@(string.IsNullOrWhiteSpace(hero?.CardTag) ? "VION AIR UNIT" : hero.CardTag)</span>
                        </div>
                        <div class="home-hero-card-title">
                            @(string.IsNullOrWhiteSpace(hero?.CardTitle) ? "VION X STREET EDITION" : hero.CardTitle)
                        </div>

                        <div class="home-hero-card-image-wrapper">
                            <div class="home-hero-card-image-bg"></div>
                            <div class="home-hero-card-image">
                                <img src="@(string.IsNullOrWhiteSpace(hero?.CardImageUrl) ? Url.Content("~/images/products/2279392d-028b-478d-ab32-8d92f38cbe38_tenis1.webp") : hero.CardImageUrl)" alt="VION Street Sneaker" />
                            </div>
                        </div>

                        <div class="home-hero-card-footer">
                            <div class="home-hero-price">
                                <span class="home-hero-price-current">
                                    @(hero != null && hero.CardPriceCurrent > 0
                                        ? hero.CardPriceCurrent.ToString("C")
                                        : "R$ 499,90")
                                </span>
                                @if (hero != null && hero.CardPriceOld.HasValue && hero.CardPriceOld.Value > 0)
                                {
                                    <span class="home-hero-price-old">
                                        @hero.CardPriceOld.Value.ToString("C")
                                    </span>
                                }
                                else
                                {
                                    <span class="home-hero-price-old">R$ 699,90</span>
                                }
                            </div>
                            <div class="home-hero-size">
                                @(string.IsNullOrWhiteSpace(hero?.CardSizeText) ? "Do 37 ao 44" : hero.CardSizeText)
                            </div>
                            <div class="home-hero-badge">
                                @(string.IsNullOrWhiteSpace(hero?.CardBadgeText) ? "Drop limitado" : hero.CardBadgeText)
                            </div>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <div class="home-hero-card">
                    <div class="home-hero-card-tag">
                        <span>@(string.IsNullOrWhiteSpace(hero?.CardTag) ? "VION AIR UNIT" : hero.CardTag)</span>
                    </div>
                    <div class="home-hero-card-title">
                        @(string.IsNullOrWhiteSpace(hero?.CardTitle) ? "VION X STREET EDITION" : hero.CardTitle)
                    </div>

                    <div class="home-hero-card-image-wrapper">
                        <div class="home-hero-card-image-bg"></div>
                        <div class="home-hero-card-image">
                            <img src="@(string.IsNullOrWhiteSpace(hero?.CardImageUrl) ? Url.Content("~/images/products/2279392d-028b-478d-ab32-8d92f38cbe38_tenis1.webp") : hero.CardImageUrl)" alt="VION Street Sneaker" />
                        </div>
                    </div>

                    <div class="home-hero-card-footer">
                        <div class="home-hero-price">
                            <span class="home-hero-price-current">
                                @(hero != null && hero.CardPriceCurrent > 0
                                    ? hero.CardPriceCurrent.ToString("C")
                                    : "R$ 499,90")
                            </span>
                            @if (hero != null && hero.CardPriceOld.HasValue && hero.CardPriceOld.Value > 0)
                            {
                                <span class="home-hero-price-old">
                                    @hero.CardPriceOld.Value.ToString("C")
                                </span>
                            }
                            else
                            {
                                <span class="home-hero-price-old">R$ 699,90</span>
                            }
                        </div>
                        <div class="home-hero-size">
                            @(string.IsNullOrWhiteSpace(hero?.CardSizeText) ? "Do 37 ao 44" : hero.CardSizeText)
                        </div>
                        <div class="home-hero-badge">
                            @(string.IsNullOrWhiteSpace(hero?.CardBadgeText) ? "Drop limitado" : hero.CardBadgeText)
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section class="home-featured">
        <div class="home-featured-header">
            <div class="home-featured-title">Destaques da semana</div>
            <a asp-controller="Home" asp-action="Catalog" class="home-featured-link">
                Ver todos os produtos
                <span>‚Üí</span>
            </a>
        </div>

        <div class="home-featured-grid">
            @if (destaques != null && destaques.Any())
            {
                foreach (var item in destaques.OrderBy(d => d.Position).Take(3))
                {
                    var categoria = item.CategoriaId.HasValue
                        ? Model?.Categorias.FirstOrDefault(c => c.Id == item.CategoriaId.Value)
                        : tenisCat;

                    if (categoria != null)
                    {
                        <a asp-controller="Home"
                           asp-action="Products"
                           asp-route-categoriaId="@categoria.Id"
                           class="home-featured-card">
                            <div class="home-featured-image">
                                <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl) ? Url.Content("~/images/products/9168ba84-e88b-4ad9-ad34-6e3e0d30f2b0_tenis3.webp") : Url.Content(item.ImageUrl))" alt="@item.Name" />
                            </div>
                            <div class="home-featured-body">
                                <div class="home-featured-tag">@item.Tag</div>
                                <div class="home-featured-name">@item.Name</div>
                                <div class="home-featured-meta">
                                    <span class="home-featured-price">
                                        @(item.Price > 0 ? item.Price.ToString("C") : "R$ 0,00")
                                    </span>
                                    @if (!string.IsNullOrWhiteSpace(item.PillText))
                                    {
                                        <span class="home-featured-pill">@item.PillText</span>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="home-featured-card">
                            <div class="home-featured-image">
                                <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl) ? Url.Content("~/images/products/9168ba84-e88b-4ad9-ad34-6e3e0d30f2b0_tenis3.webp") : Url.Content(item.ImageUrl))" alt="@item.Name" />
                            </div>
                            <div class="home-featured-body">
                                <div class="home-featured-tag">@item.Tag</div>
                                <div class="home-featured-name">@item.Name</div>
                                <div class="home-featured-meta">
                                    <span class="home-featured-price">
                                        @(item.Price > 0 ? item.Price.ToString("C") : "R$ 0,00")
                                    </span>
                                    @if (!string.IsNullOrWhiteSpace(item.PillText))
                                    {
                                        <span class="home-featured-pill">@item.PillText</span>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                }
            }
            else
            {
                if (tenisCat != null)
                {
                    <a asp-controller="Home"
                       asp-action="Products"
                       asp-route-categoriaId="@tenisCat.Id"
                       class="home-featured-card">
                        <div class="home-featured-image">
                            <img src="~/images/products/9168ba84-e88b-4ad9-ad34-6e3e0d30f2b0_tenis3.webp" alt="Sneaker VION Flux" />
                        </div>
                        <div class="home-featured-body">
                            <div class="home-featured-tag">Performance urbana</div>
