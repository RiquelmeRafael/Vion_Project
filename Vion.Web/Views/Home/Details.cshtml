@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sizeBtns = document.querySelectorAll('.size-btn');
            const addToCartBtn = document.getElementById('addToCartBtn');
            const selectedInput = document.getElementById('selectedProductId');
            const priceDisplay = document.getElementById('displayPrice');
            const stockMsg = document.getElementById('stockMessage');

            // Função para ativar o Zoom nas imagens
            function enableZoom() {
                const containers = document.querySelectorAll('.product-image-container');
                
                containers.forEach(container => {
                    const img = container.querySelector('img');
                    
                    // Remove listeners antigos para evitar duplicação (caso seja rechamado)
                    // Como estamos criando funções anônimas novas, o removeEventListener não funcionaria bem sem referência.
                    // Mas como o innerHTML é recriado na troca de tamanho, os listeners antigos morrem com os elementos antigos.
                    // Para o carregamento inicial, ok.

                    container.addEventListener('mousemove', function(e) {
                        const { left, top, width, height } = container.getBoundingClientRect();
                        
                        // Calcula posição do mouse em % (0 a 100)
                        const x = ((e.clientX - left) / width) * 100;
                        const y = ((e.clientY - top) / height) * 100;
                        
                        // Desativa transição durante o movimento para resposta instantânea
                        img.style.transition = 'none';
                        
                        // Define o ponto de origem do zoom onde o mouse está
                        img.style.transformOrigin = `${x}% ${y}%`;
                        
                        // Aplica o Zoom (2.5x)
                        img.style.transform = "scale(2.5)";
                    });

                    container.addEventListener('mouseleave', function() {
                        // Reativa a transição para voltar suavemente
                        img.style.transition = 'transform 0.3s ease';
                        img.style.transform = "scale(1)";
                        
                        // Opcional: Reseta a origem após a animação terminar
                        setTimeout(() => {
                            if(img.style.transform === "scale(1)") {
                                img.style.transformOrigin = "center center";
                            }
                        }, 300);
                    });
                });
            }

            // Ativa zoom nas imagens iniciais
            enableZoom();

            sizeBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove selected class from all
                    sizeBtns.forEach(b => b.classList.remove('selected'));
                    
                    // Add to clicked
                    this.classList.add('selected');
                    
                    // Update hidden input
                    const id = this.getAttribute('data-id');
                    selectedInput.value = id;

                    // Update Images Grid (Nike Style)
                    const img1 = this.getAttribute('data-img1');
                    const img2 = this.getAttribute('data-img2');
                    const img3 = this.getAttribute('data-img3');
                    const img4 = this.getAttribute('data-img4');
                    
                    const images = [];
                    if (img1) images.push(img1);
                    if (img2) images.push(img2);
                    if (img3) images.push(img3);
                    if (img4) images.push(img4);

                    const seenFiles = new Set();
                    const uniqueImages = [];

                    images.filter(Boolean).forEach(url => {
                        const parts = url.split(/[\/\\]/);
                        const file = parts[parts.length - 1];
                        if (!seenFiles.has(file)) {
                            seenFiles.add(file);
                            uniqueImages.push(url);
                        }
                    });

                    if (uniqueImages.length > 0) {
                        const grid = document.querySelector('.image-grid');
                        if (!grid) return;

                        grid.innerHTML = ''; // Clear current
                        
                        if (uniqueImages.length === 4) {
                            grid.classList.remove('single-image');

                            uniqueImages.forEach(img => {
                                const div = document.createElement('div');
                                div.className = 'product-image-container';
                                div.innerHTML = `<img src="${img}" alt="Imagem do Produto" class="img-fluid">`;
                                grid.appendChild(div);
                            });
                        } else {
                            grid.classList.add('single-image');

                            const img = uniqueImages[0];
                            const div = document.createElement('div');
                            div.className = 'product-image-container';
                            div.innerHTML = `<img src="${img}" alt="Imagem do Produto" class="img-fluid">`;
                            grid.appendChild(div);
                        }
                        
                        // Reativa o zoom para as novas imagens
                        enableZoom();
                    }
                    
                    // Update Price (optional, if variants differ)
                    const price = parseFloat(this.getAttribute('data-price')).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
                    // priceDisplay.innerText = price; // Uncomment if price varies by size
                    
                    // Enable Add to Cart
                    addToCartBtn.disabled = false;
                    addToCartBtn.innerText = "Adicionar ao Carrinho";
                    
                    // Stock Msg
                    const stock = parseInt(this.getAttribute('data-stock'));
                    if (stock < 5) {
                        stockMsg.innerText = `Apenas ${stock} unidades restantes!`;
                        stockMsg.className = "mt-2 small text-warning fw-bold";
                    } else {
                        stockMsg.innerText = "";
                    }
                });
            });

            // Prevent submit if no size selected
            document.getElementById('addToCartForm').addEventListener('submit', function(e) {
                if (!selectedInput.value) {
                    e.preventDefault();
                    stockMsg.innerText = "Por favor, selecione um tamanho.";
                    stockMsg.className = "mt-2 small text-danger fw-bold";
                }
            });
        });
    </script>
}
