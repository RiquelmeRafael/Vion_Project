@model Vion.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">Desativar Usuário</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="admin-card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmação de Desativação</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-slash fa-4x text-danger mb-3"></i>
                        <h3 class="text-dark">Tem certeza que deseja desativar este usuário?</h3>
                        <p class="text-muted">O usuário perderá acesso ao sistema até ser reativado.</p>
                    </div>
                    
                    <dl class="row text-dark">
                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
                        
                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        
                        <dt class="col-sm-3 text-muted">Tipo</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoUsuario.Nome)</dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn-admin-cancel me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-danger px-5 py-3 fw-bold rounded-3">
                                <i class="fa-solid fa-ban me-2"></i> Confirmar Desativação
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
