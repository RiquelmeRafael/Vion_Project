@model Vion.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">Novo Usuário</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="admin-card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Nome" class="admin-form-label"></label>
                            <input asp-for="Nome" class="admin-form-control w-100" placeholder="Nome completo" />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="admin-form-label"></label>
                            <input asp-for="Email" class="admin-form-control w-100" type="email" placeholder="email@exemplo.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-form-label">Senha</label>
                            <input name="Senha" type="password" class="admin-form-control w-100" required placeholder="********" />
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="TipoUsuarioId" class="admin-form-label">Tipo de Usuário</label>
                            <select asp-for="TipoUsuarioId" class="admin-form-control w-100" asp-items="ViewBag.TipoUsuarioId"></select>
                        </div>
                        
                        <div class="d-flex gap-2 pt-3">
                            <button type="submit" class="btn-admin-save">
                                <i class="fa-solid fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn-admin-cancel">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
