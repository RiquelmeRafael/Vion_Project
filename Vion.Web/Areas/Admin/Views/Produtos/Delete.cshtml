@model Vion.Domain.Entities.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">Excluir Produto</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="admin-card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmação de Exclusão</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-danger mb-3"></i>
                        <h3 class="text-dark">Tem certeza que deseja excluir este produto?</h3>
                        <p class="text-muted">Esta ação não poderá ser desfeita.</p>
                    </div>
                    
                    <dl class="row text-dark">
                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Preco)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Preco)</dd>

                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Categoria)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Nome)</dd>
                        
                        <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Tamanho)</dt>
                        <dd class="col-sm-9">
                            @if (Model.Tamanho != null)
                            {
                                @Html.DisplayFor(model => model.Tamanho.Nome)
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn-admin-cancel me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-danger px-5 py-3 fw-bold rounded-3">
                                <i class="fa-solid fa-trash me-2"></i> Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
