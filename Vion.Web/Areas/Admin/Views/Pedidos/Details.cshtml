@model Vion.Domain.Entities.Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido #" + Model.Id;
}

<div class="admin-container">
    <div class="admin-header">
        <h1 class="admin-title">Pedido #@Model.Id</h1>
        <a asp-action="Index" class="btn-admin-cancel">
            <i class="fas fa-arrow-left me-2"></i> Voltar
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="admin-card mb-4">
                <div class="card-header border-bottom border-light">
                    <h5 class="mb-0 text-dark"><i class="fas fa-box me-2"></i> Itens do Pedido</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush bg-transparent">
                        @foreach (var item in Model.Itens)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent border-light text-dark">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.Produto?.ImagemUrl))
                                    {
                                        <img src="@item.Produto.ImagemUrl" alt="@item.Produto.Nome" style="width: 60px; height: 60px; object-fit: cover;" class="me-3 rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="my-0 fw-bold">@item.Produto?.Nome</h6>
                                        <small class="text-muted">Quantidade: @item.Quantidade</small>
                                    </div>
                                </div>
                                <span class="text-dark">@item.PrecoUnitario.ToString("C")</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between bg-transparent border-light text-dark">
                            <span>Subtotal (Itens)</span>
                            <strong>@Model.Itens.Sum(i => i.PrecoUnitario * i.Quantidade).ToString("C")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between bg-transparent border-light text-dark">
                            <span>Frete</span>
                            <strong>@Model.ValorFrete.ToString("C")</strong>
                        </li>
                        @if (Model.ValorDesconto > 0)
                        {
                            <li class="list-group-item d-flex justify-content-between bg-transparent border-light">
                                <span class="text-success">Desconto</span>
                                <strong class="text-success">- @Model.ValorDesconto.ToString("C")</strong>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between bg-light border-top border-light text-dark">
                            <span class="h5 mb-0">Total</span>
                            <strong class="h5 mb-0 text-success">@Model.ValorTotal.ToString("C")</strong>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="admin-card mb-4">
                <div class="card-header border-bottom border-light">
                    <h5 class="mb-0 text-dark"><i class="fas fa-map-marker-alt me-2"></i> Endereço de Entrega</h5>
                </div>
                <div class="card-body text-dark">
                    <p class="mb-0 fs-5">
                        @Model.Endereco<br>
                        @Model.Cidade - @Model.Estado<br>
                        <span class="text-muted">CEP: @Model.Cep</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="admin-card mb-4">
                <div class="card-header border-bottom border-secondary">
                    <h5 class="mb-0 text-dark"><i class="fas fa-user me-2"></i> Informações do Cliente</h5>
                </div>
                <div class="card-body text-dark">
                    <p class="mb-2"><strong>Nome:</strong> @(Model.Usuario?.Nome ?? Model.NomeCliente)</p>
                    <p class="mb-2"><strong>Email:</strong> @(Model.Usuario?.Email ?? Model.EmailCliente)</p>
                    <p class="mb-2"><strong>CPF:</strong> @Model.Cpf</p>
                    <p class="mb-0"><strong>Data:</strong> @Model.DataPedido.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>

            <div class="admin-card mb-4">
                <div class="card-header border-bottom border-secondary">
                    <h5 class="mb-0 text-dark"><i class="fas fa-tasks me-2"></i> Gerenciar Status</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="admin-form-label mb-2">Status Atual</label>
                        <div class="d-grid">
                            <span class="badge @GetStatusBadgeClass(Model.Status) fs-5 py-3">@Model.Status</span>
                        </div>
                    </div>

                    <hr class="border-secondary my-4">

                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-4">
                            <label for="status" class="admin-form-label">Alterar Status para:</label>
                            <select name="status" class="admin-form-control w-100 p-2 fs-6">
                                <option value="Pendente" selected="@(Model.Status == "Pendente")">Pendente</option>
                                <option value="Aprovado" selected="@(Model.Status == "Aprovado")">Aprovado</option>
                                <option value="Em Transporte" selected="@(Model.Status == "Em Transporte")">Em Transporte</option>
                                <option value="Entregue" selected="@(Model.Status == "Entregue")">Entregue</option>
                                <option value="Cancelado" selected="@(Model.Status == "Cancelado")">Cancelado</option>
                            </select>
                        </div>

                        <button type="submit" class="btn-admin-save w-100 justify-content-center">
                            <i class="fas fa-sync-alt me-2"></i> Atualizar Status
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pendente" => "bg-warning text-dark",
            "Aprovado" => "bg-info text-dark",
            "Em Transporte" => "bg-primary",
            "Entregue" => "bg-success",
            "Cancelado" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
